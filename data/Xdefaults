URxvt.intensityStyles: false
! font
URxvt*font: xft:Monospace:pixelsize=14
URxvt*boldFont: xft:Monospace:bold:pixelsize=14

! spacing
URxvt.letterSpace: -1

! yankable links clipboard
URxvt.perl-ext-common : default,matcher,clipboard,searchable-scrollback<C-s>
URxvt.urlLauncher     : google-chrome
URxvt.matcher.button  : 3
URxvt.keysym.C-i: perl:matcher:last
URxvt.keysym.C-k: perl:matcher:list

! scrollback and style
URxvt*scrollstyle: plain
URxvt*scrollBar_right: true
URxvt*scrollColor: #292929
URxvt.saveLines: 100000
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true

! cursor
URxvt*cursorBlink: true
URxvt*cursorUnderline: true

URxvt.keysym.Control-Up:   \033[1;5A
URxvt.keysym.Control-Down:    \033[1;5B
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C
URxvt.keysym.Control-k:     echo -ne '\\033c'\n

Xcursor.theme:    Vanilla-DMZ-AA

