#umask 022

# if running bash
if [ -n "$BASH_VERSION" ]; then
  . "$HOME/.bashrc"
fi

if [ -d /mnt/c/Users/Phil/ws ]; then
  export WORKSPACE=/mnt/c/Users/Phil/ws
  export CLIENT_WS=/mnt/c/Users/Phil/ws/clients
else
  export WORKSPACE=$HOME/ws
  export CLIENT_WS=$HOME/ws/clients
fi

export CLIENTS=$HOME/ws/gdrive/electricvisions/clients
export ACCOUNTS=$HOME/ws/gdrive/electricvisions/accounts
export PUBLIC_GIT='git@github.com:PhilT'
export PRIVATE_GIT='git@bitbucket.org:philat'

export EDITOR=vim
export CDPATH=.:$WORKSPACE:$CLIENT_WS:$CLIENTS:$ACCOUNTS

NPM_PACKAGES="${HOME}/.npm-packages"

export PATH="$NPM_PACKAGES/bin:$HOME/bin:$HOME/apps/rbenv/bin:$PATH"
unset MANPATH
export MANPATH="$NPM_PACKAGES/share/man:${manpath}"


pgrep startx 2>&1 || (which startx > /dev/null 2>&1 && startx)
