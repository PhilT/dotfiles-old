#umask 022

# if running bash
if [ -n "$BASH_VERSION" ]; then
	. "$HOME/.bashrc"
fi

# used in dotfiles/bin scripts
export WORKSPACE=$HOME/ws
export CLIENTS=$HOME/ws/documents/electricvisions/clients
export ACCOUNTS=$HOME/ws/documents/electricvisions/accounts
export PUBLIC_GIT='git@github.com:PhilT'
export PRIVATE_GIT='git@bitbucket.org:philat'

export EDITOR=vim
export CDPATH=.:$WORKSPACE:$CLIENTS:$ACCOUNTS

BINSTUBS_SAFE=.bin/safe/../../.bin:bin/safe/../../bin  # create a 'safe' folder in .bin/ or bin/ for security
RBENV_SHIMS=$HOME/.rbenv/shims      # rbenv shims folder (instead of rbenv init)
USER_BIN=$HOME/bin                  # for running user scripts
#DHCLIENT=yes                        # use instead of dhcpd as lease problems occur

PATH=$BINSTUBS_SAFE:$RBENV_SHIMS:$USER_BIN:$PATH

if [[ `which startx 2>&1` != '' ]]; then
  `pgrep startx 2>&1` || startx
fi
