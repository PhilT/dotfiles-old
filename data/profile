#umask 022

# if running bash
if [ -n "$BASH_VERSION" ]; then
	. "$HOME/.bashrc"
fi

PATH="$HOME/bin:$PATH"

# used in dotfiles/bin scripts
export WORKSPACE=$HOME/ws
export PUBLIC_GIT='git@github.com:PhilT'
export PRIVATE_GIT='git@bitbucket.org:philat'

export EDITOR=vim
export CDPATH=$WORKSPACE

PATH=.bin/safe/../../.bin:$HOME/.rbenv/bin:$HOME/.rbenv/shims:$PATH

if [[ `which startx > /dev/null 2>&1` != '' ]]; then
  `pgrep startx > /dev/null 2>&1` || startx
fi

